<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         strict="false"
         verbose="true"
         bootstrap="tests/bootstrap.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
>
    <testsuites>
        <testsuite name="Vistor Pattern Unit Test Suite">
            <directory suffix="Test.php">tests/evidev/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src/evidev/</directory>
        </whitelist>
    </filter>
</phpunit>
